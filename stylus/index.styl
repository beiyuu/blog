.index-wrapper
  .aside
    position: fixed
    top: 0
    left: 0
    width: 30%
    height: 100%
    max-width: 500px
    background: #59a0b0
    //background-image: url(//d233eq3e3p3cv0.cloudfront.net/max/1000/0*cF2i1ZosSP_UTJig.jpeg)
    @media $mobile
      position: relative
      width: 100%
      height: 200px
      max-width: none

  .info-card
    position: absolute
    margin-top: 70%
    text-align: center
    width: 100%
    @media $mobile
      margin-top: 70px
    h1
      font-size: 40px
      color: #fff
      margin-bottom: 20px
      text-shadow: 0 0 80px rgba(255,255,255,.5);
      letter-spacing: .15em
      text-shadow: rgba(255,255,255,.5) 0 0 15px, rgba(255,255,255,.5) 0 0 10px
    a
      margin: 0 15px


  .index-content
    margin-left: 30%
    padding-top: 80px
    padding-right: 15%
    @media $mobile
      margin-left: 0
      padding-right: 0

  .artical-list
    width: 70%
    margin: 0 auto
    @media $mobile
      width: 85%

    li
      margin-bottom: 70px

  .title
    display: block
    font-size: 22px
    margin-bottom: 15px
    word-break: break-all
    font-weight:bold
    margin-bottom:25px
    padding-bottom: 10px
    border-bottom: 2px solid #eee
    color: #444
    @media $mobile
      font-size: 20px
      margin-bottom: 10px
    &:hover
      color: #E50053
      text-decoration: none

  .title-desc
    color: #999
    font-size: 14px
    line-height: 1.6
